<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | The Web Portal</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:whitesmoke;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Web Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Events", "Index", "Events", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Find  Business", "Index", "Businesses", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Movies", "Index", "Movies", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Tickets", "Index", "Tickets", new { area = "" }, null)</li>
                    @if (User.Identity.Name == "admin@gmail.com")
                    {
                        <li>@Html.ActionLink("Cinemas", "Index", "Cinemas", new { area = "" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        
        <footer style="float:right">
            <hr />

            <div class="footer ">
                <div class="container  ">
                    <div class="col-md-3 col-lg-3 ">
                        <h3>Telephone</h3>
                        <p><span class="glyphicon glyphicon-phone"></span> +94 777 66 56 89</p>
                    </div>

                    <div class="col-md-3 col-lg-3 ">
                        <h3>E-Mail Us</h3>
                        <p><span class="glyphicon glyphicon-envelope"></span> Email : <a href="mailto:gofaadil@live.com">gofaadil@live.com</a></p>
                    </div>

                    <div class="col-md-3 col-lg-3 ">
                        <h3>Follow Us</h3>
                        <ul>
                            <li><a href="http://www.facebook.com/TheWebPortal"><i class="fa fa-facebook-square"> </i></a></li>
                            <li><a href="http://www.twitter.com/TheWebPortal"><i class="fa fa-twitter-square"> </i></a></li>
                            <li><a href="http://www.instagram.com/TheWebPortal"><i class="fa fa-instagram"> </i></a></li>
                            <li><a href="http://www.linkedin.com/in/TheWebPortal"><i class="fa fa-linkedin-square"> </i></a></li>
                            <div class="clearfix"></div>
                        </ul>
                    </div>

                    <div class="col-md-3  col-lg-3 footer-left">
                        <h3>Address</h3>
                        <p><span class="glyphicon glyphicon-map-marker"> </span> The Web Portal</p>
                        <p> Colombo </p>
                        <p> Sri Lanka. </p>
                    </div>

                    <div class="clearfix"></div>
                    <div class="foot-bottom" style="text-align:center;margin-top:0;padding-top:0">
                        <p>&copy; @DateTime.Now.Year - The Web Portal</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
