@model IEnumerable<WebPortal.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<p>
    @if (System.Web.HttpContext.Current.User.Identity.Name == "admin@gmail.com")
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>    

<div class="container">
    <div class="row">    
        <div class="jumbotron" style="float:left;">
            <h2>Now Screening...</h2>
            @foreach (var item in Model)
            {
                <div style="float:left">

                    @if (System.Web.HttpContext.Current.User.Identity.Name == "admin@gmail.com")
                    {
                        @Html.ActionLink("Edit | ", "Edit", new { id = item.ID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    }<br />

                    <a href=@Url.Action("Details", new { id = item.ID })>
                    <img src="~/movieimages/@item.Image" class="img-responsive img-thumbnail"
                         style="max-width:350px; min-width:350px; max-height:350px; min-height:350px; display:inline" /><br />
                    <center>@Html.DisplayFor(modelItem => item.Title)</center>
                    </a>
                </div>
             }
        </div>
    </div>
</div>





