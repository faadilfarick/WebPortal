@model IEnumerable<WebPortal.Models.Event>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<p>
    @if (System.Web.HttpContext.Current.User.Identity.Name == "admin@gmail.com")
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>

<div class="container">
    <div class="row">

        <div class="jumbotron" style="float:left;">
            @foreach (var item in Model)
            {
                <div style="float:left">

                    @if (System.Web.HttpContext.Current.User.Identity.Name == "admin@gmail.com")
                {
                        @Html.ActionLink("Edit | ", "Edit", new { id = item.ID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    }<br />

                    <a href=@Url.Action("Details", new { id = item.ID })>
                        <img src="~/eventimages/@item.Image" class="img-responsive img-thumbnail"
                             style="max-width:100%; min-width:250px; max-height:400px; min-height:300px; display:inline" /><br />
                        <center>@Html.DisplayFor(modelItem => item.Title)</center>
                    </a>
                </div>
            }
        </div>
    </div>
</div>