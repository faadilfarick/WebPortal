@model IEnumerable<WebPortal.Models.Event>

@{
    ViewBag.Title = "Events";
}

<h2>Index</h2>

<p>
    @if (System.Web.HttpContext.Current.User.Identity.Name == "admin@gmail.com")
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organizer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organizer)
        </td>
        <td>
            @if (System.Web.HttpContext.Current.User.Identity.Name == "admin@gmail.com")
            {
                @Html.ActionLink("Edit | ", "Edit", new { id = item.ID })
                @Html.ActionLink("Details | ", "Details", new { id = item.ID })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            }
        </td>
    </tr>
}

</table>
