@using WebPortal.Controllers;


    @foreach (var movies in new MoviesController().Passmovie())
    {
        <div style="float:left; padding:6px;">

            <a href=@Url.Action("Details", "Movies", new { id = movies.ID })>
                <img src="~/movieimages/@movies.Image" class="img-responsive img-thumbnail"
                     style="max-width:215px; max-height:180px; min-width:210px; min-height:180px; display:inline" />
                <center>@Html.DisplayFor(modelItem => movies.Title)</center>
            </a>
        </div>
        if (movies.ID == 6)
        {
            break; // get out of the loop
        }
    }
