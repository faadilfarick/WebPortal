@using WebPortal.Controllers;

<div class="jumbotron">
    @foreach (var business in new BusinessesController().Passbusiness())
    {
        <div style="float:left">

            <a href=@Url.Action("Details", "Movies", new { id = business.ID })>
                <img src="~/businessimages/@business.Image" class="img-responsive img-thumbnail"
                     style="max-width:160px; max-height:100px; min-width:160px; min-height:100px; display:inline" />
                <center>@Html.DisplayFor(modelItem => business.Name)</center>
            </a>
        </div>
    }
</div>